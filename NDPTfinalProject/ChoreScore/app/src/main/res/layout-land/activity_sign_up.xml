<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ndpt.chorescore.SignUpActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="-30dp">

        <fragment style="@style/FragmentStyle"
            android:layout_weight="1"
            android:name="com.example.ndpt.chorescore.SignupPersonalFragment"
            android:id="@+id/signup_personal_fragment"
            android:layout_marginBottom="10dp"/>

        <fragment style="@style/FragmentStyle"
            android:layout_weight="1"
            android:name="com.example.ndpt.chorescore.SignupSecurityFragment"
            android:id="@+id/signup_security_fragment"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <fragment style="@style/FragmentStyle"
            android:layout_weight="1"
            android:name="com.example.ndpt.chorescore.SubmitResetButtonsFragment"
            android:id="@+id/signup_submit_reset_button_fragment"
            android:layout_marginBottom="-10dp"/>

        <fragment style="@style/FragmentStyle"
            android:layout_weight="1"
            android:id="@+id/signup_go_back_button_fragment"
            android:name="com.example.ndpt.chorescore.GoBackButtonFragment"/>

    </LinearLayout>
</LinearLayout>
