<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin_half"
    android:paddingBottom="@dimen/activity_vertical_margin_half"
    tools:context="com.example.ndpt.chorescore.PointRedemptionActivity"
    android:orientation="vertical">


        <fragment style="@style/FragmentStyle"
            android:layout_weight="6"
            android:name="com.example.ndpt.chorescore.PointRedemptionDetailsFragment"
            android:id="@+id/point_redemption_details"
            tools:layout="@layout/fragment_point_redemption_details"
            android:layout_marginTop="-20dp"/>

        <fragment style="@style/FragmentStyle"
            android:layout_weight="8"
            android:name="com.example.ndpt.chorescore.PointRedemptionFormFragment"
            android:id="@+id/point_redemption_form"
            tools:layout="@layout/fragment_point_redemption_form" />

        <fragment style="@style/FragmentStyle"
            android:layout_height="wrap_content"
            android:name="com.example.ndpt.chorescore.GoBackButtonFragment"
            android:id="@+id/point_redemption_go_back"
            android:layout_weight="1"
            tools:layout="@layout/fragment_go_back_button"/>

</LinearLayout>
