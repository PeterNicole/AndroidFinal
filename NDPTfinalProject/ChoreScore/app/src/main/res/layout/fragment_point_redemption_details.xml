<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ndpt.chorescore.PointRedemptionDetailsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">

        <TextView style="@style/TextViewStyle"
            android:id="@+id/tv_point_redemption_group_name_label"
            android:textSize="20sp"
            android:text="@string/group_name"/>

        <TextView style="@style/TextViewStyle"
            android:textSize="20sp"
            android:id="@+id/tv_point_redemption_group_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView style="@style/TextViewStyle"
            android:id="@+id/tv_point_redemption_point_label"
            android:textSize="20sp"
            android:text="@string/points"/>

        <TextView style="@style/TextViewStyle"
            android:textSize="20sp"
            android:id="@+id/tv_point_redemption_points"/>

    </LinearLayout>

</LinearLayout>
