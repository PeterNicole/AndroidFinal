<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ndpt.chorescore.CreateGroupActivity"
    android:orientation="vertical">

    <fragment style="@style/FragmentStyle"
        android:id="@+id/create_group_form_fragment"
        android:layout_weight="5"
        android:layout_marginTop="40dp"
        android:name="com.example.ndpt.chorescore.CreateGroupFormFragment" />

    <fragment style="@style/FragmentStyle"
        android:layout_weight="2"
        android:id="@+id/create_group_submit_reset_buttons_fragment"
        android:name="com.example.ndpt.chorescore.SubmitResetButtonsFragment"/>

    <fragment style="@style/FragmentStyle"
        android:id="@+id/create_group_go_back_fragment"
        android:layout_weight="1"
        android:name="com.example.ndpt.chorescore.GoBackButtonFragment"/>
</LinearLayout>
