<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ndpt.chorescore.ChoreDetailsActivity"
    android:orientation="vertical">

    <fragment style="@style/FragmentStyle"
        android:name="com.example.ndpt.chorescore.ChoreDescriptionFragment"
        android:layout_weight="3"
        android:id="@+id/chore_details_description" />

    <fragment style="@style/FragmentStyle"
        android:name="com.example.ndpt.chorescore.ChoreCameraFragment"
        android:layout_weight="3"
        android:id="@+id/chore_details_camera" />

    <fragment style="@style/FragmentStyle"
        android:layout_weight="1"
        android:id="@+id/chore_details_buttons"
        android:name="com.example.ndpt.chorescore.ChoreDetailsButtonsFragment" />

    <fragment style="@style/FragmentStyle"
        android:layout_weight="1"
        android:id="@+id/about_go_back_fragment"
        android:name="com.example.ndpt.chorescore.GoBackButtonFragment" />

</LinearLayout>
